<Window x:Class="Lyrik.Gui.DonateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="微信扫一扫捐助作者" Height="500" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="5.1*"></RowDefinition>
            <RowDefinition Height="0.9*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10, 10, 10, 10" TextWrapping="Wrap" FontSize="13" LineHeight="21" VerticalAlignment="Center" HorizontalAlignment="Center">
            这个软件是我利用业余时间开发的，也花费了一些时间和精力。<LineBreak/>
            如果你觉得本软件对你确实有帮助，请考虑给我一些鼓励吧！: )<LineBreak/>
            谢谢！
        </TextBlock>

        <Image Grid.Row="1" Source="pack://application:,,,/Images/wechat.png" />
        
        <DockPanel Grid.Row="2">
            <Button Click="Close" Height="30" Width="120">确定</Button>
        </DockPanel>
    </Grid>
</Window>

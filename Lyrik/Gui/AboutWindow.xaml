                <RowDefinition Height="0.85*"></RowDefinition>
                <RowDefinition Height="0.60*"></RowDefinition>
                <RowDefinition Height="0.65*"></RowDefinition>
                <RowDefinition Height="0.70*"></RowDefinition>
                <RowDefinition Height="2.6*"></RowDefinition>
                <RowDefinition Height="0.70*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" TextAlignment="Center" LineHeight="28" Padding="10">
                <Run Foreground="Orange" FontSize="15" FontWeight="Bold">Lyrik</Run>
                <Run Foreground="Goldenrod" FontSize="15">0.2.0</Run>
            </TextBlock>
            <TextBox Grid.Row="1" TextAlignment="Center" IsReadOnly="True" BorderThickness="0" Text="Copyright (c) 2015, zk (zkfake@qq.com)">
            </TextBox>
            <!--<Label Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">鸣谢：百度音乐 百度云</Label>-->
